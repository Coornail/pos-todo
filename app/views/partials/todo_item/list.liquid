<h2>Todos</h2>
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  {% assign non_empty_list = false %}

  {% for todo_item in todos %}
  {% if todo_item.list_id != list_id %}
    {% continue %}
  {% endif %}

  {% assign non_empty_list = true %}

  <tr>
    <td>{{ todo_item.content }}</td>
    <td>
      {% include_form "todo_delete", id: todo_item:id %}
    </td>
  </tr>
  {% endfor %}

  {% if non_empty_list == false %}
  No todo items yet
  {% endif %}
</table>